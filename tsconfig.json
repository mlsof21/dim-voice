{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src/ts",
    "outDir": "dist/js",
    "noEmitOnError": false,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2021", "DOM"]
  }
}
